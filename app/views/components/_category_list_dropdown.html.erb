<% category_transactions = category.transactions_for_month(@selected_month_as_date) %>
<style>
  #row-selector-<%= category.id if category %>.display {
    max-height: <%= ((category_transactions.count) * 65) + 120  %>px;
    padding: <%= category_transactions.count > 0 ? "10px 15% 50px" : "0" %>;
  }
</style>
<% category_transactions.each do |trans| %>
  <%= render 'components/transaction_budget', trans: trans, index: trans.id %>
<% end %>
